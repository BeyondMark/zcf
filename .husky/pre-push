#!/bin/sh

echo "🚀 Pre-push checks: build + test + git status..."

pnpm build
if [ $? -ne 0 ]; then
    echo "❌ Build failed!"
    exit 1
fi

pnpm test:coverage
if [ $? -ne 0 ]; then
    echo "❌ Tests failed!"
    exit 1
fi

if [ -n "$(git status --porcelain)" ]; then
    git status
    echo "NOTE: Please STASH or COMMIT your changes first!"
    exit 1
fi

echo "✅ All pre-push checks passed!"